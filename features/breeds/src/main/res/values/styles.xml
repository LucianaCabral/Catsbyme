<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/dimen_2</item>
        <item name="android:textSize">@dimen/font_size_24</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="labelWithTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_12</item>
        <item name="android:layout_marginTop">@dimen/dimen_2</item>
        <item name="android:textSize">@dimen/font_size_24</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="labelDetails">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="chip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stepSize">1.0</item>
    </style>

</resources>