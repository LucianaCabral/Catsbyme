<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ds_breed_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ds_breed_recycler_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="breed_img">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">cat image</item>
    </style>

    <style name="imageCircle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>