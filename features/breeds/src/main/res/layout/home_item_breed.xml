<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_breed"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_4"
    android:layout_marginTop="@dimen/dimen_4"
    app:cardCornerRadius="@dimen/dimen_8"
    app:cardElevation="@dimen/dimen_0"
    app:strokeColor="@color/stroke_color_card"
    app:strokeWidth="@dimen/dimen_2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <TextView
            android:id="@+id/breedTv"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:ellipsize="end"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/dimen_8"
            android:textColor="#FFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@tools:sample/last_names"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_tv"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:background="@drawable/ic_placeholder_cat"
            android:importantForAccessibility="no"
            android:padding="@dimen/dimen_4"
            android:scaleType="fitXY"
            android:translationY="@dimen/dimen_12"
            app:layout_constraintBottom_toTopOf="@id/breedTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/imageCircle"
            app:strokeColor="@color/stroke_color_card"
            app:strokeWidth="@dimen/dimen_2"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>